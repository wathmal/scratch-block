<?xml version="1.0" encoding="utf-8" standalone="no"?>
<application xmlns="http://ns.adobe.com/air/application/23.0">

	<id>WireMe</id>

	<!-- Used as the filename for the application. Required. -->
	<filename>WireMe</filename>

	<!-- The name that is displayed in the AIR application installer. May have 
		multiple values for each language. See samples or xsd schema file. Optional. -->
	<name>
		<text xml:lang="EN">
			WireMe : IoT Hub
		</text>
	</name>

	<versionNumber>0.1.1</versionNumber>
	<supportedProfiles>extendedDesktop</supportedProfiles>

	<!-- Description, displayed in the AIR application installer. May have multiple 
		values for each language. See samples or xsd schema file. Optional. -->
	<description>
		<text xml:lang="EN"><![CDATA[WireMe IoT Hub is is a modified version of Scratch 2.0 developped by the MIT Media Lab, and mBlock.More informations at http://wireme.projects.mrt.ac.lk]]></text>
	</description>

	<!-- Settings for the application's initial window. Required. -->
	<initialWindow>
		<!-- The main SWF or HTML file of the application. Required. -->
		<!-- Note: In Flash Builder, the SWF reference is set automatically. -->
		<content>WireMe.swf</content>

		<!-- The window's initial width in pixels. Optional. -->
		<width>1280</width>

		<!-- The window's initial height in pixels. Optional. -->
		<height>768</height>

		<!-- The window's initial x position. Optional. -->
		<x>50</x>

		<!-- The window's initial y position. Optional. -->
		<y>50</y>

		<!-- The window's minimum size, specified as a width/height pair in pixels, 
			such as "400 200". Optional. -->
		<minSize>500 500</minSize>

		<autoOrients>false</autoOrients>
		<fullScreen>false</fullScreen>
		<visible>true</visible>
	</initialWindow>

	<!-- The icon the system uses for the application. For at least one resolution, 
		specify the path to a PNG file included in the AIR package. Optional. -->
	<icon>
		<!-- <image16x16>icons/AppIcon16.png</image16x16> -->
		<image32x32>icons/wireme32.png</image32x32>
		<image48x48>icons/wireme48.png</image48x48>
		<image128x128>icons/wireme128.png</image128x128>
	</icon>

	<!-- Listing of file types for which the application can register. Optional. -->
	<fileTypes>

		<!-- Defines one file type. Optional. -->
		<fileType>

			<!-- The name that the system displays for the registered file type. Required. -->
			<name>wireme.ProjectFile</name>

			<!-- The extension to register. Required. -->
			<extension>sb2</extension>

			<!-- The description of the file type. Optional. -->
			<description>WireMe Project File</description>

			<!-- The MIME content type. -->
			<contentType>application/mblock.project-file</contentType>

			<!-- The icon to display for the file type. Optional. -->
			<icon>
				<image128x128>icons/wireme128.png</image128x128>
				<image32x32>icons/wireme32.png</image32x32>
				<image48x48>icons/wireme48.png</image48x48>
			</icon>

		</fileType>
	</fileTypes>

	<!-- End of the schema for adding the android specific tags in AndroidManifest.xml 
		file -->
	<extensions>
		<extensionID>cc.makeblock.BluetoothExt</extensionID>
		<extensionID>cc.makeblock.AIRSerial</extensionID>
		<extensionID>com.makeblock.AirHID</extensionID>
	</extensions>
</application>
